  </view>
  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-phone'></span>
      <view class='itemTitle'>我的手机</view>
    </view>
    <view class='right'>
      <view class='itemmintitle'>17633369350</view>
    </view>
  </view>
  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-weixin'></span>
      <view class='itemTitle'>我的微信</view>
    </view>
    <view class='right'>
      <input class='itemmintitle' placeholder-class='hc' bindinput='wxchat' placeholder='请输入您的微信号'></input>
      <text class='star'>*</text>
    </view>
  </view>
  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-shengribirthday16'></span>
      <view class='itemTitle'>我的年龄</view>

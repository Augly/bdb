    <view class='right'>
      <input class='itemmintitle' placeholder-class='hc' placeholder='请输入您的年龄'></input>
    </view>
  </view>

  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-youxiang'></span>
      <view class='itemTitle'>我的邮箱</view>
    </view>
    <view class='right'>
      <input class='itemmintitle' placeholder-class='hc' placeholder='请输入您的邮箱'></input>
    </view>
  </view>
   <view class='item'>
    <view class='left'>
      <span class='iconfont icon-tijianxingbiefenxi'></span>
      <view class='itemTitle'>性别</view>
    </view>
    <view class='right'>
      <view class='sex {{sex==1?"selectSex":""}}' data-sex='1' bindtap='select_sex'>男</view>
      <view class='sex {{sex==2?"selectSex":""}}' data-sex='2' bindtap='select_sex'>女</view>
    </view>
  </view>
  
</view>


      <span class='iconfont icon-gerenyonghutouxiang'></span>
      <view class='itemTitle'>我的姓名</view>
    </view>
    <view class='right'>
      <input class='name' placeholder='请输入您的姓名' placeholder-class='hc' bindinput='nameinput'></input>

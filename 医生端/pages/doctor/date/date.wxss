.nav {
  width: 100%;
  height: 80rpx;
  display: flex;
  justify-content: space-around;
  padding-top: 28rpx;
  border-bottom: 3px solid rgba(0, 0, 0, 0.06);
}

.nav-item {
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
  position: relative;
}

.nav .active {
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.nav .active::before {
  display: block;
  content: '';
  position: absolute;
  width: 97rpx;
  height: 4rpx;
  background: rgba(228, 84, 135, 1);
  left: 0;
  right: 0;
  margin: 0 auto;
  bottom: -2rpx;
}

.person-list {
  display: flex;
  align-items: center;
  flex-direction: column;
}

.person-item {
  width: 630rpx;
  height: 170rpx;
  border-bottom: 1rpx solid rgba(0, 0, 0, 0.06);
  display: flex;
  align-items: center;
  position: relative;
}

.person-img {
  width: 82rpx;
  height: 82rpx;
  border-radius: 50%;
  overflow: hidden;
}

.text {
  margin-left: 40rpx;
}

.text .name {
  font-size: 30rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.text .age {
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(102, 102, 102, 1);
}

.detail {
  position: absolute;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
  right: 0;
}

.data-list .active::before {
  display: block;
  content: '';
  width: 7rpx;
  height: 97rpx;
  background: rgba(228, 84, 135, 1);
  margin-left: -30rpx;
  margin-right: 30rpx;
}

.medicine_item {
  width: 690rpx;
  border-bottom: 3rpx solid rgba(0, 0, 0, 0.06);
  padding: 17rpx 0;
  display: flex;
  position: relative;
  margin: 0 auto;
  align-items: center;
}

.medicine_img {
  width: 120rpx;
  height: 120rpx;
  margin-right: 20rpx;
  border-radius: 50%;
  overflow: hidden;
}

.detail {
  position: absolute;
  font-size: 24rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
  right: 0;
}
.detail .iconfont{
  font-size:24rpx;

}

.medicnie-text {
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.medicine-tit {
  font-size: 30rpx;
  color: rgba(51, 51, 51, 1);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.medicine-tips {
  font-size: 24rpx;
  color: rgba(153, 153, 153, 1);
  text-overflow: ellipsis;
  overflow: hidden;
  white-space: nowrap;
}

.medicine-data {
  font-size: 22rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
}

.name-data {
  width: 430rpx;
  display: flex;
  justify-content: space-between;
  align-items: baseline;
}

.dis-flex {
  display: flex;
}

.style-item {
  display: flex;
  margin-bottom: 8rpx;
}

.style-detail {
  font-size: 24rpx;
  color: #666 !important;
}

.add_detail {
  width: 300rpx;
  text-overflow: ellipsis;
  white-space: nowrap;
  overflow: hidden;
}

.code {
  width: 64rpx;
  height: 59rpx;
  position: absolute;
  right: 0;
  bottom: 30rpx;
  background-color: red;
}

.finish {
  font-size: 22rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(255, 73, 115, 1);
  position: absolute;
  right: 0;
  bottom: 18rpx;
}

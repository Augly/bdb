<view class='notitle'>
  <i class='iconfont icon-xiangjipaizhao' bindtap='changesA'></i>
</view>
<view class='avtarWrap'>
  <image src='{{imgUrl}}{{userInfo.doctor_portrait}}' class='avater'></image>
</view>

<view class='title'>
  {{userInfo.doctor_realname}}
</view>
<view class='mintitle'>{{userInfo.doctor_wechat}}</view>

<view class='list'>
  <view class='item' bindtap='info'>
    <view class='left'>
      <span class='iconfont icon-gerenyonghutouxiang'></span>
      <view class='itemTitle'>个人信息</view>
    </view>
    <view class='right'>
      <span class='iconfont icon-youjiantou'></span>
    </view>
  </view>
  <view class='item' bindtap='mydata'>
    <view class='left'>
      <span class='iconfont icon-yaoqing'></span>
      <view class='itemTitle'>邀约患者</view>
    </view>
    <view class='right'>
      <span class='iconfont icon-youjiantou'></span>
    </view>
  </view>
  <view class='item' bindtap='go_message'>
    <view class='left'>
        <view class='dit' wx:if="{{unread==0}}"></view>
      <span class='iconfont icon-lingdang'></span>
      <view class='itemTitle'>信息通知</view>
    </view>
    <view class='right'>
      <span class='iconfont icon-youjiantou'></span>
    </view>
  </view>
</view>

<view class='exit' bindtap='out'>
  退 出 登 录
</view>

    <view class='wrap_width'>
      <view class='{{nav==3?"show":"hide"}} width_one'>
        <left-smooth bind:del='del'>
          <view class='data-item' data-style='2' bindtap='go_groder'>
            <view class='time'>已取消</view>
            <!-- <view class='item-finish'>已完成</view> -->
            <view class='item-img'>
              <image src='/images/11.png'></image>
            </view>
            <view class='text'>
              <view class='text-item'>
                <view class='text-tit'>患者：</view>
                <view class='text-detail'>王陆111</view>
              </view>
              <view class='text-item'>
                <view class='item-sub'>
                  <view class='num-tit'>剂量：</view>

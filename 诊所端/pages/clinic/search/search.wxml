                  <view class='num-detail'>5ml</view>
                </view>
                <view class='item-sub'>
                  <view class='num-tit'>数量：</view>
                  <view class='num-detail'>X3</view>
                </view>
              </view>
              <view class='text-item'>
                <view class='item-sub'>
                  <view class='num-tit'>预约药品：</view>
                  <view class='num-detail'>免疫球蛋白</view>
                </view>
              </view>
              <view class='text-item'>
                <view class='item-sub'>
                  <view class='num-tit'>修改预约时间：</view>
                  <view class='num-detail'>2018-04-06 10:00</view>
                </view>
              </view>
              <view class='text-item tel-num' catchtap='telnum'>
                <i class='iconfont icon-dianhua1'></i>
                <text>15698542346</text>
              </view>
            </view>
          </view>
        </left-smooth>
      </view>
    </view>
  </block>
  <!-- 已取消 -->

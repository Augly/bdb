      <view class='data-item' data-style='0' bindtap='go_groder'>
        <view class='item-img'>
          <image src='/images/11.png'></image>
        </view>
        <view class='text'>
          <view class='text-money'>
            <view class='finish_money'>
              <view class='text-tit'>患者：</view>

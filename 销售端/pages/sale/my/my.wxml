      <span class='iconfont icon-gerenyonghutouxiang'></span>
      <view class='itemTitle'>我的昵称</view>
    </view>
    <view class='right'>
      <input class='name' placeholder='zero' bindinput='nameinput'></input>
      <!-- <view class='itemmintitle'></view> -->

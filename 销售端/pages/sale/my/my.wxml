  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-phone'></span>
      <view class='itemTitle'>我的手机</view>
    </view>
    <view class='right'>
      <input class='itemmintitle'  bindinput='wxchat' placeholder='17633369350'></input>
    </view>
  </view>
  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-shengribirthday16'></span>
      <view class='itemTitle'>我的年龄</view>
    </view>
    <view class='right'>
      <input class='itemmintitle' placeholder='请输入您的年龄（岁）'></input>
    </view>
  </view>
  <view class='item'>
    <view class='left'>
      <span class='iconfont icon-youxiang'></span>
      <view class='itemTitle'>我的邮箱</view>
    </view>
    <view class='right'>
      <input class='itemmintitle' placeholder='请输入您的邮箱'></input>
    </view>
  </view>

  <view class='item' bindtap=''>
    <view class='left'>
      <span class='iconfont icon-weixin'></span>
      <view class='itemTitle'>我的微信</view>
    </view>
    <view class='right'>
      <!-- <span class='iconfont icon-jiantou'></span> -->
      <input class='itemmintitle' placeholder='请输入您的微信'></input>
    </view>
  </view>
</view>


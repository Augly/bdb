page {
  position: relative;
  padding-bottom: 120rpx;
}

.container {
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: 0 0;
  margin-top: 0rpx;
  overflow: hidden;
}

.message{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.message-item{
  margin-top: 20rpx;
  width:690rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3rpx 10rpx 0px rgba(0, 0, 0, 0.12);
  border-radius:10rpx;
  padding: 30rpx 30rpx 20rpx;
  margin-bottom: 10rpx;
}
.message-icon{
  display: flex;
  margin-bottom: 40rpx;
  align-items: center;
}
.messgae-img{
  width: 68rpx;
  height: 60rpx;
  margin-right: 22rpx;
}
.message-tit{
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.message-detail{
  font-size:32rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  display: flex;
  margin-bottom: 20rpx;
  line-height: 1;
}
.message-detail-tit{
  color:rgba(153,153,153,1);
}
.message-detail-text{
  color: #333333;
}

.footer-nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-top: 2rpx solid #ccc;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}

.footer-nav-item {
  display: flex;
  width: 25%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}

.footer-img {
  margin-top: 10rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: red;
}

.footer-text {
  margin-top: 8rpx;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
}

<view class='sale-nav'>
  <picker mode="date" value="{{date}}" bindchange="bindDateChange">
    <view class='nav-item'>
      {{date}}
      <i class='iconfont icon-xiala'></i>
    </view>
  </picker>

  <view class='and'>至</view>
  <picker mode="date" value="{{datetwo}}" start="{{date}}"  bindchange="bindTwoDateChange">
    <view class='nav-item'>
      {{datetwo}}
      <i class='iconfont icon-xiala'></i>
    </view>
  </picker>
  <picker bindchange="bindPickerChange" value="{{index}}" range="{{array}}" range-key='goods_name'>
    <view class='nav-item'>
    <view class='item_mintitle'>{{array[index].goods_name}}</view>
      
      <i class='iconfont icon-xiala'></i>
    </view>
  </picker>
</view>

<view class='list'>
  <view class='list-tit'>
    <view class='tit-item text-left'>
      诊所名称
    </view>
    <view class='tit-item text-center'>
      药品名称
    </view>
    <view class='tit-item  text-right'>
      销售量
    </view>
  </view>
  <block wx:for='{{list}}' wx:key=''>
    <view class='list-item'>
      <view class='name text-left'>{{item.hospital_name}}</view>
      <view class='details text-center'>{{item.goods_name}}</view>
      <view class='details  text-right'>{{item.sell_goodsnum}}</view>
    </view>
  </block>

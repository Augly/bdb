page {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.index-item {
  display: flex;
  width: 690rpx;
  height: 240rpx;
  margin-top: 20rpx;
  justify-content: space-between;
  align-items: center;
  padding: 0 77rpx 0 52rpx;
  background: rgba(255, 255, 255, 1);
  box-shadow: 0px 3rpx 40rpx 0px rgba(0, 0, 0, 0.12);
  border-radius: 10rpx;
}

.index-tit {
  font-size: 34rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.index-tips {
  font-size: 34rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
}

.index-img {
  width: 177rpx;
  height: 177rpx;
}



.footer-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-top: 2rpx solid #ccc;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
.footer-nav-item{
  display: flex;
  width: 25%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.footer-img{
  margin-top: 10rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: red;
}
.footer-text{
  margin-top: 8rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(153,153,153,1);
}

/* popup */

.del-popup {
  position: relative;
  width: 500rpx;
  height: 430rpx;
  z-index: 3;
  background: #fff;
  border-radius: 20rpx;
  margin: 408rpx auto 0;
  overflow: hidden;
}

.tuichu {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.pic-nav {
  width: 100%;
  height: 65rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #fd4978;
}

.del-tit {
  font-size: 36rpx;
  font-family: PingFang-SC-Bold;
  margin-top: 116rpx;
  text-align: center;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
}

.del-details {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  width: 320rpx;
  margin: 28rpx auto 0;
}

.del-btn {
  width: 150rpx;
  height: 60rpx;
  margin: 50rpx auto 0;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(241, 241, 241, 1);
  text-align: center;
  line-height: 60rpx;
  background-color: #fd4978;
  border-radius: 10rpx;
}
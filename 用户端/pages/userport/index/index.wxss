page {
  position: relative;
  height: 100%;
}

.container {
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: 0 0;
  margin-top: 0rpx;
  overflow: hidden;
}
.icon-kong{
  font-size: 88rpx;
  color: #ccc;
}

.banner{
  width: 100%;
  height: 347rpx;
  z-index: 100;
  position: relative;
  box-shadow:0rpx 6rpx 21rpx 3rpx rgba(0, 0, 0, 0.1);
}
.banner-swiper{
  width: 100%;
  height: 347rpx;
}
.banner-img{
  width: 100%;
  height: 100%;
}
.seachGroup{
  position: absolute;
  top:0;
  width: 100%;
  height: 100rpx;
  display: flex;
  align-items: center;
  justify-content:flex-end;
}



.banner-inform{
  width: 60rpx;
  height: 60rpx;
  margin-right: 20rpx;
   position: relative;
  /* background-image:url(https://lingyiil.dazhu-ltd.cn/public/static/program/images/qie03.png); */
  background-repeat: no-repeat;
  background-size: 100% 100%;
}
.bannerActive{
 
  background-color: rgba(0, 0, 0, 0.3);
  border-radius:50%; 
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 24rpx;
  color: rgba(255,255,255,1);
}
.aother::after{
  content: '';
  width: 15rpx;
  height: 15rpx;
  position: absolute;
  right: 0;
  top: 0;
  border-radius:50%; 
  background-color: RGBA(255, 0, 0, 1);
}
/* medicine */
.medicine-tit{
  width: 100%;
  height: 100rpx;
  display: flex;
  line-height: 100rpx;
  align-items: baseline;
  /* align-items: center; */
}
.medicine-tit-yuyue{
  font-size:36rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(51,51,51,1);
  margin-left: 20rpx;
}
.medicine-tit-life{
  font-size:24rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(102,102,102,1);
}
.medicine-line{
  width:2rpx;
  height:20rpx;
  background:rgba(102,102,102,1);
  border-radius:1px;
  margin: 0 12rpx ;
}
.medicine-more{
  font-size:24rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(153,153,153,1);
  position: absolute;
  right: 12rpx;
}
.medicine-more .icon-youjiantou{
  font-size: 24rpx;

}
.medicine-imgs{
  display: flex;
}
.medicine-img{
  width: 375rpx;
  height: 375rpx;
  position: relative;
  
}
.mskt{
  width: 100%;
  height: 100%;
  position: absolute;
  background:linear-gradient(30deg,rgba(0,0,0,1) 0%,rgba(240,240,240,0) 100%);
}
.medicine-img-btn{
  font-size:24rpx;
  border:2rpx solid rgba(255,255,255,1);
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(240,240,240,1);
  background-color: rgba(0, 0, 0, 0.1);
  width: 201rpx;
  height: 51rpx;
  line-height: 51rpx;
  text-align: center;
  bottom: 20rpx;
  left: 20rpx;
  position: absolute;
}


.history-imgs{
  display: flex;
  justify-content: space-around;
}
.history-img{
  width: 190rpx;
  text-align: center
}
.history-img-item{
  width: 100%;
  height: 160rpx;
}
.history-tit{
  font-size:24rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(51,51,51,1);
  overflow: hidden;
text-overflow:ellipsis;
white-space: nowrap;
}
.history-tit-sub{
  font-size:22rpx;
  font-family:PingFang-SC-Heavy;
  font-weight:800;
  color:rgba(153,153,153,1);
}


.footer-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-top: 2rpx solid #ccc;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
.footer-nav-item{
  display: flex;
  width: 33.3%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.footer-img{
  margin-top: 10rpx;
  width: 56rpx;
  height: 56rpx;
  /* background-color: red; */
}
.footer-text{
  margin-top: 8rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(153,153,153,1);
}

.history-null{
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.hide{

page {
  position: relative;
  background-color: RGBA(252, 252, 252, 1);
}

.slide-image {
  width: 100%;
  height: 422rpx;
}

.res {
  overflow: hidden;
  background-color: rgba(255, 255, 255, 1);
  padding: 0rpx 0rpx 45rpx 0rpx;
}

.res_list {
  font-size: 32rpx;
  font-family: Adobe Heiti Std R;
  font-weight: normal;
  color: rgba(102, 102, 102, 1);
  box-sizing: border-box;
  padding: 0rpx 50rpx;
  margin-top: 60rpx;
  display: flex;
}

.res_list .iconfont {
  font-size: 40rpx;
  color: RGBA(100, 223, 197, 1);
  margin-right: 30rpx;
}

.ks {
  padding: 25rpx 30rpx 33rpx 30rpx;
  background-color: rgba(255, 255, 255, 1);
  margin-top: 30rpx;
}

.title {
  font-size: 32rpx;
  font-weight: normal;
  color: rgba(51, 51, 51, 1);
}

.taglist {
  margin-top: 23rpx;
  display: flex;
  flex-wrap: wrap;
}

.tag {
  width: 148rpx;
  height: 50rpx;
  border: 2rpx solid rgba(230, 230, 230, 1);
  border-radius: 25rpx;
  font-size: 28rpx;
  font-weight: normal;
  color: rgba(153, 153, 153, 1);
  display: flex;
  align-items: center;
  justify-content: center;
  margin-right: 26rpx;
  margin-top: 17rpx;
}

.tag:nth-child(4n) {
  margin-right: 0rpx;
}

.produce {
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  color: rgba(153, 153, 153, 1);
  line-height: 47rpx;
  margin-top: 30rpx;
}


.footer-nav{
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  width: 100%;
  border-top: 2rpx solid #ccc;
  height: 100rpx;
  background-color: #fff;
  display: flex;
  justify-content: space-around;
}
.footer-nav-item{
  display: flex;
  width: 33.3%;
  justify-content: center;
  align-items: center;
  flex-direction: column;
}
.footer-img{
  margin-top: 10rpx;
  width: 56rpx;
  height: 56rpx;
  background-color: red;
}
.footer-text{
  margin-top: 8rpx;
  font-size:20rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(153,153,153,1);
}

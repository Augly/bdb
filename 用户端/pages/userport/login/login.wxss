/**index.wxss**/

page {
  position: relative;
  height: 100%;
  background-color: #0acbb0;
}

.container {
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: 100% auto;
  background-position: 0 0;
  margin-top: 0rpx;
  overflow: hidden;
  background-image: url("http://mywx.zzvlm.com/user/banner.png");
}

.text {
  font-size: 70rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
}

.tips {
  font-size: 40rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 40rpx;
}

.pic_code_wrap {
  width: 100%;
  height: 100%;
  background: rgba(0, 0, 0, 0.4);
  position: fixed;
  z-index: 3;
}

.pic-nav {
  width: 100%;
  height: 65rpx;
  position: absolute;
  top: 0;
  left: 0;
  background-color: #63dfc4;
}

.pic_code {
  position: relative;
  width: 500rpx;
  height: 430rpx;
  z-index: 3;
  background: #fff;
  border-radius: 20rpx;
  margin: 408rpx auto 0;
  overflow: hidden;
}

.pic_code_pic {
  width: 200rpx;
  height: 92rpx;
  margin: 21rpx auto 0;
  display: block;
}

.pic_code_input {
  width: 323rpx;
  height: 61rpx;
  font-size: 32rpx;
  font-family: PingFang-SC-Bold;
  text-align: center;
  color: rgba(102, 102, 102, 1);
  border: 2rpx solid rgba(153, 153, 153, 1);
  border-radius: 6rpx;
  margin: 12rpx auto 0;
}

.pic_code_tit {
  font-size: 24rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(102, 102, 102, 1);
  text-align: center;
  margin-top: 80rpx;
}

.tuichu {
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  right: 10rpx;
  top: 10rpx;
}

.pic_btn {
  width: 150rpx;
  height: 60rpx;
  background-color: #0acbb0;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(241, 241, 241, 1);
  display: flex;
  align-items: center;
  margin: 21rpx auto 0;
  justify-content: center;
  border-radius: 10rpx;
}

.pic_tips {
  width: 323rpx;
  margin: 10rpx auto 0;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(228, 84, 135, 1);
}

.titpic {
  width: 400rpx;
  height: 150rpx;
  margin: 256rpx auto 60rpx;
  text-align: center;
}

.login_num {
  width: 380rpx;
  height: 80rpx;
  border-radius: 10rpx;
  line-height: 40rpx;
  font-size: 28rpx;
  font-family: PingFang-SC-Bold;
  /* font-weight: bold; */
  color: rgba(153, 153, 153, 1);
  /* opacity: 0.4; */
  text-align: center;
  /* margin: 60rpx auto 40rpx; */
}

.password_box {
  position: relative;
  width: 560rpx;
  height: 80rpx;
  display: flex;
  align-items: center;
  box-sizing: border-box;
  padding: 0rpx 12rpx 0rpx 34rpx;
  margin: 0 auto 40rpx;
  background: #93ffe6;
  border-radius: 10rpx;
}

.password_box .iconfont {
  /* position: absolute; *//* left: 28rpx; *//* top: 21rpx; */
  color: #63dfc4;
  /* z-index: 2 */
}

.code_tips {
  width: 560rpx;
  margin: 19rpx auto 0;
  font-size: 20rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(228, 84, 135, 1);
  position: absolute;
  left: 0;
  right: 0;
}

.password {
  width: 400rpx;
  height: 80rpx;
  opacity: 0.4;
  background: rgba(147, 255, 230, 1);
  /* margin: 0 auto; */
  font-size: 28rpx;
  text-align: center;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(153, 153, 153, 1);
  border-radius: 10rpx;
}

.send_num {
  width: 112rpx;
  height: 56rpx;
  background: rgba(255, 72, 102, 1);
  border-radius: 10rpx;
  /* position: absolute; */
  right: 12rpx;
  /* top: 12rpx; */
  font-size: 28rpx;
  font-family: PingFang-SC-Medium;
  font-weight: 500;
  color: rgba(241, 241, 241, 1);
  text-align: center;
  line-height: 56rpx;
}

.login_btn {
  width: 560rpx;
  height: 80rpx;
  background: rgba(10, 203, 176, 1);
  border-radius: 10rpx;
  margin: 120rpx auto 0;
  text-align: center;
  font-size: 40rpx;
  font-family: PingFang-SC-Bold;
  font-weight: bold;
  color: rgba(255, 255, 255, 1);
  line-height: 80rpx;
  letter-spacing: 40rpx;
  padding-left: 40rpx;
}

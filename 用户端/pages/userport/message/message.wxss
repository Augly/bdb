page {
  position: relative;
  height: 100%;
}

.container {
  width: 100%;
  min-height: 100%;
  background-repeat: no-repeat;
  background-size: 100% 100%;
  background-position: 0 0;
  margin-top: 0rpx;
  overflow: hidden;
}

.message{
  display: flex;
  flex-direction: column;
  align-items: center;
}
.message-item{
  margin-top: 20rpx;
  width:690rpx;
  height:278rpx;
  background:rgba(255,255,255,1);
  box-shadow:0px 3px 10px 0px rgba(0, 0, 0, 0.12);
  border-radius:10rpx;
  padding: 30rpx;
}
.message-icon{
  display: flex;
  margin-bottom: 40rpx;
  align-items: center;
}
.messgae-img{
  width: 68rpx;
  height: 60rpx;
  margin-right: 22rpx;
}
.message-tit{
  font-size:32rpx;
  font-family:PingFang-SC-Bold;
  font-weight:bold;
  color:rgba(51,51,51,1);
}
.message-detail{
  font-size:28rpx;
  font-family:Adobe Heiti Std R;
  font-weight:normal;
  display: flex;
}
.message-detail-tit{
  color:rgba(153,153,153,1);
}
.message-detail-text{
  color: #333333;
}